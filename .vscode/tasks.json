{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "app_name:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"volumes": [
					{"localPath": "/home/jake/.aws",
					 "containerPath": "/home/appuser/.aws"},
				],
				"env": {
					"RUNTIME_ENV": "DEV"
				}
			},	
			"python": {
				"file": "src/app.py"
			}
		}
	]
}